{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "1.4.3",
  "packages": [
    "packages/ui/*",
    "packages/tiptap/*",
    "packages/apps-global-menu/*"
  ],
  "changelog": {
    "repo": "infopiphany/ui",
